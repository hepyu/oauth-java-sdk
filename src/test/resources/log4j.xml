<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" type="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" type="[%-5p %d{yyyy-MM-dd HH:mm:ss.SSS}] %l [%m]%n"/>
        </layout>
    </appender>

    <appender name="file" class="org.apache.log4j.AsyncAppender">
        <param name="BufferedIO" type="false"/>
        <param name="BufferSize" type="65536"/>
        <param name="blocking" type="false"/>
    </appender>

</log4j:configuration>
